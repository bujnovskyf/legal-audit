{
    "version": 2,
    "installCommand": "npm install && npx playwright install chromium",
    "builds": [
      {
        "src": "apps/backend/api/*.ts",
        "use": "@vercel/node",
        "config": { "maxLambdaSize": "50mb" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/apps/backend/api/$1.ts" }
    ]
  }
  